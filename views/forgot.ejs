<%- include('partials/header') -%>

<body style="background-color: rgb(245,252,255);">
    <div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-6">
				<div class="card" style="border-radius: 10px;">
					<div class="card-header" style="background-color: #FFFFFF;border-radius: 10px;">
                        
                        <h3 class="text-center" style="font-family: Roboto, sans-serif; font-weight: bold;">Reset Password</h3>
					</div>
					<div class="card-body">
						<form action="/forgot" method="POST">
							<%- include('partials/messages') -%>
							<div class="form-group">
                                <large id="emailHelp" class="form-text text-muted" style="font-family: Roboto, sans-serif;font-weight: semi-bold; font-size: larger;">Please enter the email address associated with your account to receive a password reset link:</large>
								<input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp" placeholder="Email" required style="margin-top: 10px;">
							</div>
							<button type="submit" class="btn btn-primary btn-block" style="background-color: #32B9FF; font-family: Roboto, sans-serif;font-weight: semi-bold; border-radius: 5px">Submit</button>
						</form>
					</div>
					
				</div>
			</div>
		</div>
	</div>
  
</body>


<%- include('partials/footer') -%>